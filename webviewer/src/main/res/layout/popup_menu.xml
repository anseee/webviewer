<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/menuPaddingVertical"
    android:paddingTop="@dimen/menuPaddingVertical">

    <LinearLayout
        android:id="@+id/popup_menu_ll_control_buttons"
        android:layout_width="@dimen/menuWidth"
        android:layout_height="@dimen/menuItemHeight"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/popup_menu_btn_back"
            android:layout_width="0dp"
            android:layout_height="@dimen/menuItemHeight"
            android:layout_weight="1"
            app:srcCompat="@drawable/back" />

        <View
            android:layout_width="@dimen/dividerWidth"
            android:layout_height="@dimen/menuItemHeight"
            android:background="@android:color/black" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/popup_menu_btn_forward"
            android:layout_width="0dp"
            android:layout_height="@dimen/menuItemHeight"
            android:layout_weight="1"
            app:srcCompat="@drawable/forward" />
    </LinearLayout>

    <TextView
        android:id="@+id/popup_menu_btn_refresh"
        android:layout_width="@dimen/menuWidth"
        android:layout_height="@dimen/menuItemHeight"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/menuPaddingHorizontal"
        android:paddingRight="@dimen/menuPaddingHorizontal"
        android:text="@string/menu_refresh"
        android:textSize="@dimen/menuItemTextSize" />

    <TextView
        android:id="@+id/popup_menu_btn_copy_link"
        android:layout_width="@dimen/menuWidth"
        android:layout_height="@dimen/menuItemHeight"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/menuPaddingHorizontal"
        android:paddingRight="@dimen/menuPaddingHorizontal"
        android:text="@string/menu_copy_link"
        android:textSize="@dimen/menuItemTextSize" />

    <TextView
        android:id="@+id/popup_menu_btn_open_with_other_browser"
        android:layout_width="@dimen/menuWidth"
        android:layout_height="@dimen/menuItemHeight"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/menuPaddingHorizontal"
        android:paddingRight="@dimen/menuPaddingHorizontal"
        android:text="@string/menu_open_with_other_browser"
        android:textSize="@dimen/menuItemTextSize" />

    <TextView
        android:id="@+id/popup_menu_btn_share"
        android:layout_width="@dimen/menuWidth"
        android:layout_height="@dimen/menuItemHeight"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/menuPaddingHorizontal"
        android:paddingRight="@dimen/menuPaddingHorizontal"
        android:text="@string/menu_share"
        android:textSize="@dimen/menuItemTextSize" />
</LinearLayout>